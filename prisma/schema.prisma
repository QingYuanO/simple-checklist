// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  name   String?
  phone  String? @unique
  openid String  @unique

  isAdmin   Boolean     @default(false) @map("is_admin")
  checkList CheckList[]

  @@map("user")
}

model Goods {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  name             String
  description      String?
  cover            String?
  isActivity       Boolean            @default(false)
  checkListOnGoods CheckListOnGoods[]

  @@map("goods")
}

model CheckList {
  id               String             @id @default(cuid())
  createdAt        DateTime           @default(now()) @map("created_at")
  updatedAt        DateTime           @default(now()) @updatedAt @map("updated_at")
  deletedAt        DateTime?          @map("deleted_at")
  name             String
  memo             String?
  status           String
  address          String?
  checkListOnGoods CheckListOnGoods[]
  User             User?              @relation(fields: [userId], references: [id])
  userId           String?            @map("user_id")

  @@map("check_list")
}

model CheckListOnGoods {
  post        Goods     @relation(fields: [goodsId], references: [id])
  goodsId     String    @default(cuid()) @map("goods_id")
  checkList   CheckList @relation(fields: [checkListId], references: [id])
  checkListId String    @default(cuid()) @map("check_list_id")
  assignedAt  DateTime  @default(now()) @map("assigned_at")

  @@id([goodsId, checkListId])
  @@map("check_list_on_goods")
}
